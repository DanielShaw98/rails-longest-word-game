<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">

    <h1 class="my-2">New Game</h1>

    <ul class="list-group list-group-horizontal w-25 my-2">
      <% @letters.each do |letter| %>
      <li class="list-group-item list-group-item-primary list-group-item-action"><%= letter.upcase %></li>
      <% end %>
    </ul>

    <h4 class="my-2">What is the longest word you can find?</h4>

    <form action="/games/score" method="post" data-turbo="false" class="form-inline">
      <input type="text" placeholder="Enter word here" name="word" class="form-control">
      <input type="submit" value="Submit" class="btn btn-primary my-2">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters %>
    </form>

    </div>
  </div>
</div>
